<body><center>
      <div class="hello">
        <br>
             <h2> cm to inches</h2>
         <input type="text" id="num">
         <br>
         <br>
         <button onclick="convert()"> Convert the inches </button>
         <p id="anwser"></p>
      </div>
</center>
    <script>
         function convert(){
        let cal = Number(document.getElementById("num").value)
        let inches = cal/2.54
       
        let result = document.getElementById("anwser")
        result.innerHTML = inches.toFixed(2)
        }
        convert()
    </script>
